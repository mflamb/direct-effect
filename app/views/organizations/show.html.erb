<p id="notice"><%= notice %></p>

<% if current_admin || current_user.organization_id == @organization.id %>
<p>
  <strong>Name:</strong>
  <%= @organization.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @organization.description %>
</p>

<p>
  <strong>Address:</strong>
  <%= @organization.address %>
</p>

<p>
  <strong>Poc name:</strong>
  <%= @organization.poc_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @organization.phone %>
</p>


<%= link_to 'Edit', edit_organization_path(@organization) %> |
<% else %>
redirect_to root_path
<% end %>
<%= link_to 'Back', organizations_path %>
<% if current_admin %>
| <%= link_to 'Delete Organization', @organization, method: :delete, data: { confirm: 'Are you sure you want to delete this organization?' } %>
<% end %>

<ul class="list-unstyled">
  <% @organization.needs.each do |need| %>
    <li>
      <%= render need %>
    </li>
  <% end %>
</ul>
