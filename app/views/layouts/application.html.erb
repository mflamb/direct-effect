<!DOCTYPE html>
<html>
  <head>
    <title>DirectEffect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src='https://api.mapbox.com/mapbox-gl-js/v0.44.2/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v0.44.2/mapbox-gl.css' rel='stylesheet' />
  </head>

  <body>


    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="navbar navbar-collapse">
        <ul class="navbar-nav mr-auto">


          <li class="navbar-item">
           <%= link_to 'Map', unauthenticated_root_path, class: 'nav-link' %>
          </li>

          <% if !current_user && !current_admin %>

          <li class="navbar-item">
            <%= link_to 'Create Account', users_sign_up_path, class: 'nav-link' %>
          </li>

          <% end %>

          <% if current_user %>

          <li class="navbar-item">
           <%= link_to 'Home', authenticated_user_root_path, class: 'nav-link' %>
          </li>

          <li class="navbar-item">
            <%= link_to 'User Log Out', users_sign_out_path, method: 'delete', class: 'nav-link' %>
          </li>



          <% elsif !current_admin %>
          <li class="navbar-item">
            <%= link_to 'User Login', users_sign_in_path, class: 'nav-link' %>
          </li>
          <% end %>

          <% if current_admin %>
          <li class="navbar-item">
            <%= link_to 'Admins Home', authenticated_admin_root_path, class: 'nav-link' %>
          </li>
          
          <li class="navbar-item">
            <%= link_to 'Admin Log Out', admins_sign_out_path, method: 'delete', class: 'nav-link' %>
          </li>
          
          <% elsif !current_user %>
          <li class="navbar-item">
            <%= link_to 'Admin Login', admins_sign_in_path, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav> 
        
    
   <div class="container">   
    <p id="notice"><%= notice %></p>
    <%= yield %>
    </div>
  </body>
</html>
