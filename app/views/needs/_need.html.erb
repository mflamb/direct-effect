<% if need.enabled? %>
  <% url = need_disable_path(need) %>
  <% style = 'success' %>
<% else %>
  <% url = need_enable_path(need) %>
  <% style = 'secondary' %>
<% end %>
<%= button_to need.item, url, method: :patch, remote: true,
  form: { id: "need-btn-#{need.id}" },
  class: "btn btn-#{style} mt-2" %>